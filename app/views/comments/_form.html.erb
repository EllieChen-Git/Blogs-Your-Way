<%# The steps in video weren't right: need to go to routes.rb to create routes first %>

<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<%# #(14) collection.build: Returns one or more new objects of the collection type that have been instantiated with attributes and linked to this object through a foreign key, but have not yet been saved. Note: This only works if an associated object already exists, not if itâ€˜s nil!
%>

<%# name column %>
    <div class="field">
        <div class="control">
            <%= f.input :name, input_html: { class: "input" }, wrapper: false, label_html: {class: "label" }%>
        </div>
    </div>

<%# comment column %>
    <div class="field">
        <div class="control">
            <%= f.input :comment, input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label" }%>
        </div>
    </div>

<%# submit button: can add a string after submit as its value %>
    <%= f.button :submit, "Publish" , class: "button-is-primary" %>

<% end %>