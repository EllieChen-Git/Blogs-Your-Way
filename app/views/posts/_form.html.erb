<%#  On Step #(6-7):
- Create the partial _form
- Move 'form code' #(the code below) from new.html.erb to _from.html.erb (here)
- On edit & new.html.erb: render "form"
%>

<div class="section">
    <%= simple_form_for @post do |f|%>

<%# title column %>
    <div class="field">
        <div class="control">
            <%= f.input :title, input_html: { class: "input" }, wrapper: false, label_html: {class: "label" }%>
        </div>
    </div>

<%# content column %>
    <div class="field">
        <div class="control">
            <%= f.input :content, input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label" }%>
        </div>
    </div>

<%# submit button %>
    <%= f.button :submit, class: "button-is-primary" %>

    <% end %>
</div>