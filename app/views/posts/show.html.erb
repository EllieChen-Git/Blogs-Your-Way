<%= content_for :page_title, @post.title %>

<section class="session">
    <div class="container">
        <nav class="level">
        <!-- left side -->
            <div class="level-left">
                <p class="level-item">
                    <strong>Actions</strong>
                </p>
            </div>
        <!-- left side -->
            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Edit Post", edit_post_path(@post), class: "button" %>
                </p>
                <p class="level-item">
                    <%= link_to 'Delete Post', post_path(@post), method: :delete, data: { confirm: "Are you sure you wanna delete this?"}, class: "button is-danger" %>
                </p>
            </div>
        </nav>
        <hr />

        <div class="content">
        <%= @post.content%>
        </div>


    </div>
</section>


<section class="comments"></section>